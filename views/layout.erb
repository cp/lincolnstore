<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN"
    "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <title>Lincoln Student Store</title>
    <link rel="stylesheet" type="text/css" media="screen" href="/style.css">
  </head>
  <body>
    <a href="/"><img id="banner" src="/images/banner.png"></a>
    <div id="nav">
      <a href="/about">About</a> -
      <a href="/volunteer">Volunteer</a> -
      <a href="/contact">Contact</a>
    </div>
    <% if flash[:errors] %>
      <div id="errors">
      <%= 'ERRORS: ' + flash[:errors] %>
      </div>
    <% elsif flash[:message] %>
      <div id="message">
        <%= flash[:message] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
  <footer>
  <span>Copyright 2013 Lincoln Student Store.</span>
  </footer>
</html>
